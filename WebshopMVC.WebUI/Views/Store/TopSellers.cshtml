@using WebshopMVC.Domain.Entities

@model IEnumerable<WebshopMVC.Domain.Entities.CartItem>

@{
    ViewBag.Title = "TopSellers";
}



<div class="topfivelist">
    <div class="topfiveitems container-fluid">
        @if (Model.Count() > 0)
        {
            foreach (CartItem item in Model)
            {
                <div class="card itemcard">
                    <div class="card-body">
                        <div class="cartitemimg">
                            @Html.Partial("_ProductImage", item.Product)
                        </div>
                        <div class="cartiteminfo">
                            <p>@item.Product.Name</p>
                            <p>@item.Product.Summary</p>
                            <p>@item.Quantity have been ordered in the last @ViewBag.Days days</p>
                        </div>
                    </div>
                    @if (ViewBag.LoggedIn)
                    {
                        <div class="card-footer">
                            @Html.Partial("_AddToCart", item.Product)
                        </div>
                    }
                </div>
            }
        }
        else
        {
            <p> No items have been ordered in the past @ViewBag.Days days</p>
        }
    </div>

</div>