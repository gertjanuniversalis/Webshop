@model WebshopMVC.WebUI.Models.ContactFormModel

@{
    ViewBag.Title = "Contact";
}

<div class="card contactme">
    <div class="card-header">
        <h3>Contact me</h3>
    </div>
    <div class="card-body">
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary()
            <div class="form-group forminput">
                <label>Name:</label>
                @Html.TextBoxFor(f => f.UserName, new { @class = "form-control" })
            </div>
            <div class="form-group forminput">
                <label>Email</label>
                @Html.TextBoxFor(f => f.Email, new { @class = "form-control" })
            </div>
            <div class="form-group forminput">
                <label>Message:</label>
                @Html.TextAreaFor(f => f.Message, new { @class = "form-control" })
            </div>
            <input type="submit" value="Send message" class="btn btn-primary" />
        }
    </div>
</div>