@model WebshopMVC.WebUI.Models.LoginViewModel

@{
    ViewBag.Title = "Login";
    bool error = ViewBag.Incorrect ?? false;
}

<div class="card userForm contactme">
    <div class="card-header">
        <h3>Log In</h3>
        @if(error)
        {
            <span class="alert-danger">Incorrect credentials, please try again</span>
        }
    </div>
    <div class="card-body">
        <p>Log in to access the user specific functions</p>
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary()
            
            <div class="form-group forminput">
                <label>Email:</label>
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            </div>
            <div class="form-group forminput">
                <label>Password:</label>
                @Html.PasswordFor(m => m.Password, new {  @class = "form-control"})
            </div>
            <input type="submit" value="Log in" class="btn btn-primary" />
        }
    </div>
</div>